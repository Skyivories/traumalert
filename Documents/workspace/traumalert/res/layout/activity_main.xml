<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/button_contacts"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:text="Emergency Contacts"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <Button
        android:id="@+id/button_settings"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_toRightOf="@id/button_contacts"
        android:text="Settings"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <ListView
        android:id="@+id/contacts_list"
        android:layout_width="fill_parent"
        android:layout_height="400dp"
        android:layout_below="@id/button_contacts" />

    <Button
        android:id="@+id/button_edit_contacts"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@id/contacts_list"
        android:layout_centerHorizontal="true"
        android:text="Edit Contacts"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

</RelativeLayout>